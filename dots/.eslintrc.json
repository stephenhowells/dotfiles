{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true,
        "mocha": true
    },
    "extends": "standard",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "babel",
        "html"
    ],
    "rules": {
        "arrow-parens": [
            2,
            "as-needed"
        ],
        "comma-dangle": [
            2,
            "always-multiline"
        ],
        "indent": [
            2,
            2
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "no-unused-vars": [
            1,
            {"vars": "local", "args": "none"}
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "never"
        ]
    }
}
